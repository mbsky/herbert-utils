<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="t_hero_xingfu">
	<typeAlias alias="HeroXingfu" type="net.snake.gamemodel.hero.bean.HeroXingfu" />
	<resultMap id="HeroXingfuRes" class="HeroXingfu">
		<result column="f_id" property="id" jdbcType="INTEGER" />
		<result column="f_hero_id" property="heroId" jdbcType="INTEGER" />
		<result column="f_type" property="type" jdbcType="INTEGER" />
		<result column="f_model_id" property="modelId" jdbcType="INTEGER" />
		<result column="f_xfvalue" property="xfvalue" jdbcType="INTEGER" />
	</resultMap>

	<select id="queryall" resultMap="HeroXingfuRes" parameterClass="java.lang.Integer">
		select * from t_hero_xingfu where f_hero_id=#heroId#
	</select>

	<insert id="insert" parameterClass="HeroXingfu">
		insert into t_hero_xingfu (f_hero_id,f_type,f_xfvalue, f_model_id) values (#heroId#, #type#,#xfvalue#,#modelId#)
		<selectKey keyProperty="id" resultClass="java.lang.Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="update" parameterClass="java.lang.Integer">
		update t_hero_xingfu set f_xfvalue = f_xfvalue+1 where f_id = #id#
	</update>
</sqlMap>