<?xml version="1.0" encoding="GBK"?>
<project basedir="." default="build">
	<property file="build.properties" />
	<path id="appClassPath">
		<fileset dir="${basedir}/../WEB-INF/lib" includes="*.jar" />
		<fileset dir="${basedir}/applib" includes="*.jar" />
	</path>
	<!--建立目录结构-->
	<target name="build">
		<java fork="true" dir="${basedir}/appPngToSwf" classpathref="appClassPath" failonerror="true" classname="net.snake.service.ShengChengVm" args="applicationContext.xml">
			<arg value="languageflash"/>
		</java><!---->
		<copy todir="${dir}lan"  file="${basedir}/appPngToSwf/lan_text.xml"  overwrite="true"></copy>
		<ant target="configCommit" antfile="${basedir}/updateFlash.xml"></ant>
			<!--加密-->
		<ant target="build" antfile="${basedir}/FlashEncrpy.xml">
		</ant>
	</target>
	
</project> 