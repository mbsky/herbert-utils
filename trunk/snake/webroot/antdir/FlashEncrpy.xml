<?xml version="1.0" encoding="GBK"?>
<project basedir="." default="build">
<property file="build.properties" />
	<!--该文件用于更新客户端svn目录-->
	
	<property name="upgradeconfig" value="${basedir}/bc2upgrade.txt">
	</property>
	<!--===================================-->
	<path id="AojianClientEncrpy.classpath">
		<fileset dir="${basedir}">
			<include name="aojianAntClientEncrpy2.jar" />
		</fileset>
	</path>

	<taskdef name="tse" classname="net.aojian.clientencrpy.AojianClientEncrpy" classpathref="AojianClientEncrpy.classpath" />
	<taskdef name="tsze" classname="net.aojian.clientencrpy.AojianClientEncrpyZlib" classpathref="AojianClientEncrpy.classpath" />
	<property name="keyA" value="121" />
	<property name="keyB" value="39" />
	<property name="keyC" value="297" />

	<target name="config">
		<copy file="${flashdir.res}/config/config.xml" overwrite="true" tofile="${flashdir.res}/config/configtemp.xml" />
	<!-- 纯平说可以不用 转换了老版本需要新版做了兼容
	2011-3-15
		<replaceregexp file="${flashdir.res}/config/config.xml" encoding="utf-8" flags="-g" match="\.swf" replace="\.tse" />
		<replaceregexp file="${flashdir.res}/config/config.xml" encoding="utf-8" flags="-g" match="\.xml" replace="\.tsze" />
		-->
		<tsze a="${keyA}" b="${keyB}" c="${keyC}" file="${flashdir.res}/config/config.xml" />
		<rename dest="${flashdir.res}/config/config.xml" src="${flashdir.res}/config/configtemp.xml" />
	</target>
	<target name="resOthers">
		<tse a="${keyA}" b="${keyB}" c="${keyC}">
			<fileset dir="${flashdir.res}/codelib">
				<include name="**/*.swf" />
			</fileset>
			<fileset dir="${flashdir.res}/../res/data">
				<include name="**/*.swf" />
			</fileset>
			<fileset dir="${flashdir.res}/skin">
				<include name="**/*.swf" />
			</fileset>
			<fileset dir="${flashdir.res}/main">
				<include name="TGame.swf" />
			</fileset>
			<fileset dir="${flashdir.root}">
				<include name="**/*.swf" />
			</fileset>
		</tse>
		<tsze a="${keyA}" b="${keyB}" c="${keyC}">
			<fileset dir="${flashdir.res}/codelib">
				<include name="**/*.xml" />
			</fileset>
			<fileset dir="${flashdir.res}/../res/data">
				<include name="**/*.xml" />
			</fileset>
			<fileset dir="${flashdir.res}/config">
							<include name="**/*.xml" />
						</fileset>
			<fileset dir="${flashdir.res}/skin">
				<include name="**/*.xml" />
			</fileset>
			<fileset dir="${flashdir.root}">
				<include name="**/*.xml" />
			</fileset>
		</tsze>
	</target>
	<target name="releasedir">
	<delete dir="${eflashdir.dir}" />
		<mkdir dir="${eflashdir.dir}" />
		<copy todir="${eflashdir.dir}">
			<fileset dir="${flashdir.root}">
				<exclude name="**/*.swf" />
				<exclude name="**/*.xml" />
			</fileset>
		</copy>
	<copy todir="${eflashdir.dir}/program/main" file="${flashdir.root}/program/main/TGameLoader.swf">
		</copy>
		<copy todir="${eflashdir.dir}/js"  file="${flashdir.root}/js/expressInstall.swf">
		</copy>
		<copy todir="${eflashdir.dir}/res/data/mc">
						<fileset dir="${flashdir.root}/res/data/mc">
						</fileset>
		</copy>
		<copy todir="${eflashdir.dir}" file="${flashdir.root}/crossdomain.xml">
			</copy>
		<zip destfile="d:/share/eflashdir.zip" basedir="${eflashdir.dir}" />
		<delete dir="${upgradedir.dir}" />
		<mkdir dir="${upgradedir.dir}" />

			<exec executable="cmd" failonerror="true">
			<arg value="/c" />
			<arg value="D:\devtool\BC2\BC2.exe /silent @${upgradeconfig}" />
		</exec>	
		<!--<copy todir="${pre_eflashdir.dir}" overwrite="true">
			<fileset dir="${upgradedir.dir}">
			</fileset>
		</copy>-->
	</target>
	<target name="build" depends="resOthers,config">

	</target>
</project>