<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="t_character_msg">
	<typeAlias alias="CharacterMsg" type="net.snake.gamemodel.guide.bean.CharacterMsg" />
	<resultMap class="CharacterMsg" id="CharacterMsgRes">
		<result column="f_id" jdbcType="INTEGER" property="id" />
		<result column="f_character_id" jdbcType="INTEGER" property="characterId" />
		<result column="f_msg" jdbcType="VARCHAR" property="msg" />
	</resultMap>

	<select id="selectByCharacterId" parameterClass="java.lang.Integer" resultMap="CharacterMsgRes">
		select f_id, f_character_id, f_msg from t_character_msg where f_character_id=#characterId#
	</select>

	<delete id="deleteByCharacterId" parameterClass="java.lang.Integer">
		delete from t_character_msg where f_character_id=#characterId#
	</delete>

	<insert id="insert" parameterClass="CharacterMsg">
		insert into t_character_msg (f_character_id, f_msg) values (#characterId:INTEGER#, #msg:VARCHAR#)
		<selectKey keyProperty="id" resultClass="java.lang.Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

</sqlMap>