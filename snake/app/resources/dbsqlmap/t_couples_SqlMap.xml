<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="t_couples">
	<typeAlias alias="Couples" type="net.snake.gamemodel.wedding.bean.Couples" />
	<resultMap id="CouplesRes" class="Couples">
		<result column="f_id" property="id" jdbcType="INTEGER" />
		<result column="f_male_id" property="maleId" jdbcType="INTEGER" />
		<result column="f_female_id" property="femaleId" jdbcType="INTEGER" />
		<result column="f_male_favor" property="maleFavor" jdbcType="INTEGER" />
		<result column="f_female_favor" property="femaleFavor" jdbcType="INTEGER" />
		<result column="f_ring_id" property="ringId" jdbcType="INTEGER" />
		<result column="f_wedding_date" property="weddingDate" jdbcType="TIMESTAMP" />
		<result column="f_apply_wedding_id" property="applyWeddingId" jdbcType="INTEGER" />
	</resultMap>

	<select id="queryall" resultMap="CouplesRes">
		select * from t_couples
	</select>

	<select id="selectByMale" resultMap="CouplesRes" parameterClass="java.lang.Integer">
		select * from t_couples where f_male_id=#male#
	</select>

	<insert id="insert" parameterClass="Couples">
		insert into t_couples (f_male_id, f_female_id, f_male_favor,
		f_female_favor, f_ring_id,
		f_wedding_date, f_apply_wedding_id)
		values (#maleId:INTEGER#, #femaleId:INTEGER#,
		#maleFavor:INTEGER#,
		#femaleFavor:INTEGER#,
		#ringId:INTEGER#, #weddingDate:TIMESTAMP#, #applyWeddingId:INTEGER#)
		<selectKey resultClass="java.lang.Integer" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<delete id="deleteById" parameterClass="java.lang.Integer">
		delete from t_couples where f_id = #id#
	</delete>

	<update id="updateByPrimaryKeySelective" parameterClass="Couples">
		update t_couples
		<dynamic prepend="set">
			<isNotNull prepend="," property="maleId">
				f_male_id = #maleId:INTEGER#
			</isNotNull>
			<isNotNull prepend="," property="femaleId">
				f_female_id = #femaleId:INTEGER#
			</isNotNull>
			<isNotNull prepend="," property="maleFavor">
				f_male_favor = #maleFavor:INTEGER#
			</isNotNull>
			<isNotNull prepend="," property="femaleFavor">
				f_female_favor = #femaleFavor:INTEGER#
			</isNotNull>
			<isNotNull prepend="," property="ringId">
				f_ring_id = #ringId:INTEGER#
			</isNotNull>
			<isNotNull prepend="," property="weddingDate">
				f_wedding_date = #weddingDate:TIMESTAMP#
			</isNotNull>
			<isNotNull prepend="," property="applyWeddingId">
				f_apply_wedding_id = #applyWeddingId:INTEGER#
			</isNotNull>
		</dynamic>
		where f_id = #id:INTEGER#
	</update>

</sqlMap>