<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="t_character_count">
	<typeAlias alias="CharacterCount" type="net.snake.gamemodel.hero.bean.CharacterCount" />
	<resultMap id="CharacterCountRes" class="CharacterCount">
		<result column="f_id" property="id" jdbcType="INTEGER" />
		<result column="f_character_id" property="characterId" jdbcType="INTEGER" />
		<result column="f_count_type" property="countType" jdbcType="INTEGER" />
		<result column="f_count" property="count" jdbcType="INTEGER" />
		<result column="f_describe" property="describe" jdbcType="VARCHAR" />
	</resultMap>

	<select id="queryall" resultMap="CharacterCountRes" parameterClass="java.lang.Integer">
		select * from t_character_count where f_character_id=#characterId#
	</select>

	<insert id="insert" parameterClass="CharacterCount">
		insert into t_character_count (f_id, f_character_id,
		f_count_type,f_count, f_describe) values (#id:INTEGER#,
		#characterId:INTEGER#,
		#countType:INTEGER#,#count:INTEGER#,#describe:VARCHAR#)
		<selectKey keyProperty="id" resultClass="java.lang.Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="update" parameterClass="CharacterCount">
		update t_character_count set
		f_count = #count# where f_id = #id#
	</update>
</sqlMap>