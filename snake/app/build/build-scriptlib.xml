<?xml version="1.0" encoding="GBK"?>
<project basedir="." default="build">
	<property name="src.dir" value="${basedir}/../src" />
	<property name="buildclass.dir" value="${basedir}/target/classes" />
	<property name="jarfile" value="${basedir}/target/aj-scriptlib.jar" />


	<target name="initTarget">
		<mkdir dir="${basedir}/target" />
	</target>

	<target name="jar" depends="initTarget">
		<delete dir="${buildclass.dir}" />
		<mkdir dir="${buildclass.dir}" />
		<javac debug="true" includes="net/snake/script/**" source="1.5" srcdir="${src.dir}" destdir="${buildclass.dir}" encoding="gbk">
			<compilerarg value="-Xlint:deprecation" />
		</javac>
		<copy todir="${buildclass.dir}">
			<fileset dir="${src.dir}" includes="net/snake/script/**" />
		</copy>
		<jar destfile="${jarfile}" basedir="${buildclass.dir}" />
		
		<delete dir="${basedir}/../../AojianScript/lib/aj-scriptlib.jar" />
		<copy todir="${basedir}/../../AojianScript/lib">
			<fileset file="${jarfile}"></fileset>
		</copy>
			
	</target>
	<target name="build" depends="jar">
	</target>
</project>