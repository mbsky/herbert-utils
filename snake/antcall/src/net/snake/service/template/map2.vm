<?xml version="1.0" encoding="GBK"?>
<project basedir="." default="build">
	<property file="build.properties" />
	<path id="appClassPath">
		<fileset dir="${basedir}/../WEB-INF/lib" includes="*.jar" />
		<fileset dir="${basedir}/applib" includes="*.jar" />
		
		
	</path>
	<!--建立目录结构-->
	<target name="build">
		<java fork="true"  maxmemory="500m" dir="${basedir}/appPngToSwf" classpathref="appClassPath" failonerror="true" classname="net.snake.service.ShengChengVm" args="applicationContext.xml">
		<arg value="map2"/>
		#foreach($entry in $list)
			<arg value="$!{entry}"/>
		#end
		</java><!---->
		    <copy todir="${rootpath}/res/data/maps"  overwrite="true">
				   <fileset dir="${basedir}/appPngToSwf/map">  
				   <include name="**"/>  
				    </fileset>  
				 </copy>
		<ant target="configCommit" antfile="${basedir}/updateFlash.xml"></ant>
	</target>
</project>